<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="actionBarStyle">@style/ActionBarTheme</item>
        <item name="android:actionBarWidgetTheme">@style/ActionBarWidgetTheme</item>
        <item name="actionBarWidgetTheme">@style/ActionBarWidgetTheme</item>
    </style>

    <style name="ActionBarTheme"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <!-- ActionBar title text -->
    <style name="ActionBarWidgetTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewTheme</item>
    </style>

    <style name="AutoCompleteTextViewTheme" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
